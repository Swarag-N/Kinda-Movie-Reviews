<% include ../partials/header %>
<h1 class=" d-flex justify-content-center">
	Edit the Movie <%=movie.title%>
</h1>
<div class=row>
	<form action="/movies/<%=movie._id%>?_method=PUT" class="mx-auto" method="POST">
		<div class="form-group">
			<input class="form-control " type="text" name="m[title]" placeholder="Name of the Movie" required value="<%=movie.title%>">
		</div>
		<div class="form-group">
			<input class="form-control " type="text" name="m[url]" placeholder="Url of the Movie" required value="<%=movie.url%>">
		</div>
		<div class="form-group">
			<input class="form-control " type="text" name="m[description]" placeholder="Description of the Movie" required value="<%=movie.description%>">
		</div>
		<div class="form-group">
			<input class="btn  form-control btn-primary" type="submit">
		</div>
	</form>
</div>
<a href="/movies">Go Back </a>
<% include ../partials/footer %>